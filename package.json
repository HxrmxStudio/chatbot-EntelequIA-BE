{
  "name": "chatbot-wf1-service",
  "version": "1.0.0",
  "private": true,
  "description": "Dedicated WF1 backend migration from N8N to NestJS",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node --files -r tsconfig-paths/register --project tsconfig.json src/main.ts",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.{md,json}\"",
    "test": "jest --testPathPattern=test",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration --runInBand",
    "test:integration:pg": "jest --runInBand --testPathPattern=test/integration/.*pg-.*.repository.integration.spec",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "smoke:wf1:final-stage": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/smoke-wf1-final-stage.ts",
    "validate:prompts": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/validate-prompts.ts",
    "db:migration:status": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/check-db-migration-state.ts",
    "wf1:conversations:close-stale": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/close-stale-conversations.ts",
    "wf1:telemetry:verify": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/verify-telemetry-persistence.ts",
    "wf1:learning:bootstrap-seeds": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/bootstrap-learning-seeds.ts",
    "wf1:learning:validate-seeds": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/validate-learning-seeds.ts",
    "wf1:learning:build": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/build-intent-exemplars.ts",
    "wf1:learning:promote": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/promote-intent-exemplars.ts",
    "wf1:learning:rollback": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/rollback-intent-exemplars.ts",
    "wf1:quality:weekly-report": "ts-node --files -r tsconfig-paths/register --project tsconfig.json scripts/generate-wf1-weekly-quality-report.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "@nestjs/throttler": "^6.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "pg": "^8.18.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "undici": "^7.21.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.13",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.16",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
